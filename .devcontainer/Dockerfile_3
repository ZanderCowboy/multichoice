# Stage 1: Android SDK
FROM openjdk:latest as android_stage

# Set Android environment variables
ENV ANDROID_HOME=/opt/android-sdk

# Install Android SDK
RUN apt-get update && \
    apt-get install -y \
    wget \
    unzip

RUN wget https://dl.google.com/android/repository/commandlinetools-linux-7302050_latest.zip -O /tmp/android-sdk.zip && \
    unzip /tmp/android-sdk.zip -d $ANDROID_HOME && \
    rm /tmp/android-sdk.zip

# Add Android SDK tools to PATH
ENV PATH=$ANDROID_HOME/cmdline-tools/latest/bin:$ANDROID_HOME/tools/bin:$ANDROID_HOME/platform-tools:$PATH

# Accept Android SDK licenses
RUN yes | sdkmanager --licenses

# Stage 2: Flutter
FROM cirrusci/flutter:latest as flutter_stage

# Set Flutter environment variables
ENV FLUTTER_HOME=/opt/flutter
ENV PATH=$FLUTTER_HOME/bin:$PATH

# Stage 3: Final image
FROM ubuntu:20.04

# Set environment variables
ENV ANDROID_HOME=/opt/android-sdk
ENV FLUTTER_HOME=/opt/flutter
ENV PATH=$ANDROID_HOME/cmdline-tools/latest/bin:$ANDROID_HOME/tools/bin:$ANDROID_HOME/platform-tools:$FLUTTER_HOME/bin:$PATH

# Install dependencies
RUN apt-get update && \
    apt-get install -y \
    git \
    unzip

# Copy Android SDK from the Android SDK stage
COPY --from=android_stage $ANDROID_HOME $ANDROID_HOME

# Copy Flutter from the Flutter stage
COPY --from=flutter_stage $FLUTTER_HOME $FLUTTER_HOME

# Install any additional dependencies needed for Flutter development
# ...

# Set up your working directory for the Flutter app
WORKDIR /app

# Clone your Flutter app repository
# RUN git clone <your_flutter_app_git_repository> .

# Install Flutter dependencies
RUN flutter pub get

# Expose the default Flutter port for debugging
EXPOSE 3000

# Command to run your Flutter application
# CMD ["flutter", "run", "--release"]
